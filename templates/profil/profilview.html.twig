{% extends 'base.html.twig' %}

{% block body %}

    <div class="col-12">
        <h1 class="m-5">Le profil !</h1>
        <div class="row">
            <div class="col-3 mr-4">
                {% include 'profil/_detail.html.twig' with {'user': user} only %}
                {% if app.user is not null %}
                <a href="{{ path('app_message_send', {'id': user.id}) }}"
                   class="btn btn-outline-warning m-2">
                    Envoyer un message
                </a>
                {% else %}
                <p>
                    Connectez-vous pour envoyer un message
                    <i class="far fa-smile-wink"></i>
                </p>
                <a href="{{ path('app_registration_login') }}"
                   class="btn btn-outline-info m-5">
                    Connexion
                </a>
                {% endif %}
            </div>
            <div class="col-7 ml-4">
                {% include 'post/listPost.html.twig' with {'posts': posts, 'user': user} only %}
            </div>
        </div>
    </div>

{% endblock %}
