{% extends 'base.html.twig' %}

{% block body %}
    <h3>Commentaires de l'annonce "{{ post.title }}"</h3>

    <p>
        <a href="{{ path('app_admin_post_index') }}" class="btn btn-outline-secondary mb-3">
            Retour Ã  la gestion des annonces</a>
    </p>

    <table class="table">
        <tr>
            <th>Utilisateur</th>
            <th>Contenu</th>
            <th>Date</th>
            <th width="150px"></th>
        </tr>

        {% for comment in post.comments %}
            <tr>
                <td>{{ comment.author }}</td>
                <td>{{ comment.content }}</td>
                <td>{{ comment.publicationDate|date('d/m/Y')  }}</td>
                <td>
                    <a href="{{ path('app_comment_delete', {'id': comment.id}) }}"
                       class="btn btn-danger">Supprimer</a>
                </td>
            </tr>

        {% else %}
            <tr>
                <td colspan="4" class="text-center">
                    Aucun commentaire
                </td>
            </tr>
        {% endfor %}
    </table>
{%  endblock %}